<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 2 -->

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="#fff"
                android:stretchColumns="1">

                <TableRow
                    android:id="@+id/tr_certification"
                    android:layout_height="49dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/uc_authentication"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />

                    <TextView
                        android:id="@+id/tv_certification"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="11dp"
                        android:drawableRight="@drawable/accessory_black"
                        android:gravity="right"
                        android:paddingRight="11dp"
                        android:singleLine="true"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/title_line" />

                <TableRow
                    android:id="@+id/tr_phone_number"
                    android:layout_height="49dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/phone_number"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="11dp"
                        android:drawableRight="@drawable/accessory_black"
                        android:gravity="right"
                        android:paddingRight="11dp"
                        android:singleLine="true"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/title_line"
                    android:visibility="gone" />

                <TableRow
                    android:id="@+id/tr_email"
                    android:layout_height="49dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/email"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:drawableRight="@drawable/accessory_black"
                        android:gravity="right"
                        android:paddingRight="11dp"
                        android:singleLine="true"
                        android:textColor="@color/item_value_color" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/title_line" />

                <TableRow
                    android:id="@+id/tr_third_party"
                    android:layout_height="49dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/third_account"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bind_qq"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_wx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="9dp"
                            android:src="@drawable/ic_bind_wx"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_wb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="9dp"
                            android:src="@drawable/ic_bind_wb"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:paddingRight="11dp"
                            android:src="@drawable/accessory_black" />
                    </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:background="@color/title_line" />

                <TableRow
                    android:id="@+id/tr_change_password"
                    android:layout_height="49dp"
                    android:paddingBottom="15dp"
                    android:visibility="gone"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/modify_password"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />

                    <TextView
                        android:id="@+id/tv_change_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:drawableRight="@drawable/accessory_black"
                        android:gravity="right"
                        android:paddingRight="11dp"
                        android:singleLine="true"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="15dp"
                android:background="@drawable/common_blue_rounded_btn_bg"
                android:text="@string/log_out"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>