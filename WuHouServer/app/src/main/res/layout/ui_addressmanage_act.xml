<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/viewPager">

    <include layout="@layout/comm_title" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null" />

    <LinearLayout
        android:id="@+id/layoutEmptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_address"
            android:textColor="@color/item_key_color"
            android:textSize="@dimen/common_description_size" />

        <LinearLayout
            android:id="@+id/btn_add"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/common_blue_rounded_btn_bg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/address_add"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/new_address"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>