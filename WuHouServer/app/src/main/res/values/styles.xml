<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@drawable/share_bg</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <!-- ui 最外层风格 -->
    <style name="viewPager">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/page_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <!-- 底部 导航风格 -->
    <style name="redio_btn_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawablePadding">-3dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/item_key_color</item>
    </style>

    <!-- checkBox风格 -->
    <style name="checkBox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <!-- login checkBox风格 -->
    <style name="login_checkBox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_checkbox_show_pwd</item>
    </style>

    <!-- 地址管理 checkBox风格 -->
    <style name="address_checkBox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/address_checkbox_selector</item>
    </style>

    <!-- 圆角头像style -->
    <style name="round_photo_style">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/drawable_round</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="progressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_rotate_drawable_</item>
    </style>

    <style name="iphone_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="blue_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/common_blue_rounded_btn_bg</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AnimTools" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>

    <style name="share_anmi" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="textNoShadow" parent="android:style/Widget.TextView">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>
</resources>