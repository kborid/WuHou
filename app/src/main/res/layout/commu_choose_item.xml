<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_wh"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="天湖美镇"
                android:textColor="@color/commu_title_color_selector"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="地址信息"
                android:textColor="@color/commu_address_color_selector"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/common_rect_white_commu_bg"
                android:gravity="center"
                android:text="建设中"
                android:textColor="@color/main_color_wh"
                android:textSize="11sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_choose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="center"
                android:src="@drawable/iv_commu_selected" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>