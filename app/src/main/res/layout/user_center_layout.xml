<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/viewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/usr_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_center_bg"
                android:gravity="center_vertical"
                android:padding="30dp">

                <com.yunfei.wh.ui.custom.CircleImageViewWithBound
                    android:id="@+id/iv_photo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/def_photo_gary" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_photo"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/tv_userid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_username"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/common_text_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/detail_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_myorder"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/common_item_selector_bg"
                    android:drawableLeft="@drawable/menu_order"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/accessory_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/uc_myorder"
                    android:textColor="@color/item_value_color"
                    android:textSize="@dimen/common_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C6" />

                <TextView
                    android:id="@+id/tv_myemail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/common_item_selector_bg"
                    android:drawableLeft="@drawable/menu_deal"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/accessory_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/uc_myemail"
                    android:textColor="@color/item_value_color"
                    android:textSize="@dimen/common_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C6" />

                <TextView
                    android:id="@+id/tv_mydealbyorther"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/common_item_selector_bg"
                    android:drawableLeft="@drawable/menu_dealbyother"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/accessory_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/uc_mydealbyorther"
                    android:textColor="@color/item_value_color"
                    android:textSize="@dimen/common_text_size" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C6" />
                <TextView
                    android:id="@+id/tv_myOnlineBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/common_item_selector_bg"
                    android:drawableLeft="@drawable/menu_myonlinebusiness"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/accessory_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/uc_myonlinebusiness"
                    android:textColor="@color/item_value_color"
                    android:textSize="@dimen/common_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#C6C6C6"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_other_order"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/common_item_selector_bg"
                    android:drawableLeft="@drawable/menu_dealbyother"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/accessory_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/uc_other_order"
                    android:textColor="@color/item_value_color"
                    android:textSize="@dimen/common_text_size"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/detail_lay2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_account_info"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/common_item_selector_bg"
                        android:drawableLeft="@drawable/menu_userinfo"
                        android:drawablePadding="16dp"
                        android:drawableRight="@drawable/accessory_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/uc_account_info"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#C6C6C6" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/common_item_selector_bg"
                            android:drawableLeft="@drawable/menu_message"
                            android:drawablePadding="16dp"
                            android:drawableRight="@drawable/accessory_black"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:text="@string/uc_message"
                            android:textColor="@color/item_value_color"
                            android:textSize="@dimen/common_text_size" />

                        <TextView
                            android:id="@+id/tv_msg_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/common_blue_rounded_btn_bg"
                            android:text="1"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#C6C6C6" />

                    <TextView
                        android:id="@+id/tv_server"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/common_item_selector_bg"
                        android:drawableLeft="@drawable/menu_server"
                        android:drawablePadding="16dp"
                        android:drawableRight="@drawable/accessory_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/uc_server"
                        android:textColor="@color/item_value_color"
                        android:textSize="@dimen/common_text_size" />

                    <View
                        android:id="@+id/line_server"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#C6C6C6" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/common_item_selector_bg"
                    android:drawableLeft="@drawable/menu_about"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/accessory_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/uc_about"
                    android:textColor="@color/item_value_color"
                    android:textSize="@dimen/common_text_size" />

                <include layout="@layout/lv_notice_nologin" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>